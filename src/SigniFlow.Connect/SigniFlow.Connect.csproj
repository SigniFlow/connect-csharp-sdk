<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>SigniFlow.Connect</AssemblyName>
    <PackageId>SigniFlow.Connect</PackageId>
    <OutputType>Library</OutputType>
    <Authors>SigniFlow</Authors>
    <Company>SigniFlow</Company>
    <AssemblyTitle>SigniFlow.Connect</AssemblyTitle>
    <Description>A library generated from a OpenAPI doc</Description>
    <Copyright>No Copyright</Copyright>
    <RootNamespace>SigniFlow.Connect</RootNamespace>
    <Version>1.2.2</Version>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\SigniFlow.Connect.xml</DocumentationFile>
    <RepositoryUrl>https://github.com/SigniFlow/connect-csharp-sdk.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>SigniFlow.Connect - the C# library for the SigniFlow OpenAPI Spec v1</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JsonSubTypes" Version="1.8.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="RestSharp" Version="106.11.7" />
    <PackageReference Include="Polly" Version="7.2.1" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

</Project>
